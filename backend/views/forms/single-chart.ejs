<form class="card-text" method="POST" id="form1" action="/graphic-form">
    <div class="form-group">

        <label for="resultSelected">
            <span class="fa fa-database"></span> Select a stored district
        </label>
        <select class="form-control" name="resultSelected" id="resultSelected">
            <% for(let i = 0, len = results.length; i < len; i++){ %>
            <option value="<%= results[i]._id %>">
                <%= results[i].eleccion.fecha.slice(4, 6) %>/<%= results[i].eleccion.fecha.slice(0, 4) %>,
                <%= results[i].provincia %>,
                by <%= results[i].eleccion.autor %>
            </option>
            <% } %>
        </select>
    </div>
    <div class="form-group">
        <label for="mode">
            <span class="fa fa-signal"></span> Chart kind
        </label>
        <select class="form-control" name="mode" id="mode">
            <option value="bar">Bar chart</option>
            <option value="pie">Pie chart</option>
        </select>
    </div>
    <div class="form-group">
        <label for="mandates">
            <span class="fa fa-user"></span> Number of mandates
        </label>
        <select class="form-control" name="mandates" id="mandates">
            <% for(i = 1; i <= 1000; i++){ %>
            <option value="<%= i %>"><%= i %></option>
            <% } %>
        </select>

    </div>
    <div class="form-group">
        <label for="percentage">
            <span class="fa fa-percent"></span> Select minimum percentage
        </label>
        <select class="form-control" name="percentage" id="percentage">
            <% for(var i = 0.00; i <= 100.00; i += 0.50){ %>
            <option value="<%= i %>"><%= i %>%</option>
            <% } %>
        </select>

    </div>
</form>


