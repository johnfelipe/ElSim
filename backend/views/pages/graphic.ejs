<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>

<body background="images/construction.jpg">
<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">
                        <b>Data</b><hr>
                    </h4>
                    <div class="card-text">
                        <span class="fa fa-user"></span> Author: <%= autor %>
                        <hr>
                        <span class="fa fa-calendar"></span> Date: <%= fecha.slice(4, 6) %>/<%= fecha.slice(0, 4) %>
                        <hr>
                        <span class="fa fa-map-marker"></span> District: <%= provincia %>
                        <hr>
                        <span class="fa fa-envelope"></span> Number of votes: <%= result.numberOfVotes %>
                        <hr>
                        <ul class="list-group">
                            <% Object.keys(result.parties).forEach(function(key){ if(parseInt(result.parties[key]) > 0) { %>
                            <li class="list-group-item"><img src="<%= icons[key] %>" width="18" height="18"/> | <%= key %>
                                | <%= result.parties[key] %> mandates
                            </li>
                            <% }}); %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">Chart</h4><hr>
                    <div id="container"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="http://code.highcharts.com/highcharts-3d.js"></script>
<script type="text/javascript">
    jQuery.noConflict();
    var options = <%- JSON.stringify(options) %>;
    (function ($) {
        $(function () {
            $('#container').highcharts(options);
        });
    })(jQuery);

</script>
</body>
</html>
