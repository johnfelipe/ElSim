<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>

<body background="images/construction.jpg">
<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-4">
            <div class="list-group">
                <a class="list-group-item active">
                    <b>Data</b>
                </a>
                <a class="list-group-item list-group-item-action">
                    <span class="glyphicon glyphicon-user"></span> Author: <%= autor %><hr>
                    <span class="glyphicon glyphicon-calendar"></span> Date: <%= fecha.slice(4, 6) %>/<%= fecha.slice(0, 4) %><hr>
                    <span class="glyphicon glyphicon-map-marker"></span> District: <%= provincia %><hr>
                    <span class="glyphicon glyphicon-envelope"></span> Number of votes: <%= result.numberOfVotes %><hr>
                    <span class="glyphicon glyphicon-ok-circle"></span> Parties:
                    <ul>
                    <% Object.keys(result.parties).forEach(function(key){ if(parseInt(result.parties[key]) > 0) { %>
                        <li><img src="<%= icons[key] %>" width="18" height="18"/> | <%= key %> | <%= result.parties[key] %> mandates</li>
                    <% }}); %>
                    </ul>
                </a>
            </div>
        </div>

        <div class="col-md-8">
            <div class="list-group">
                <a class="list-group-item active">
                    <b>Chart</b>
                </a>
                <a class="list-group-item list-group-item-action">
                    <div id="container"></div>
                </a>
            </div>
        </div>
    </div>
</div>
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="http://code.highcharts.com/highcharts-3d.js"></script>
<script type="text/javascript">
    jQuery.noConflict();
    var options = <%- JSON.stringify(options) %>;
    console.log(options);
    (function ($) { // encapsulate jQuery
        $(function () {
            $('#container').highcharts(options);
        });
    })(jQuery);

</script>
</body>
</html>
