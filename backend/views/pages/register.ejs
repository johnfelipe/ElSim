<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>
<script src="/add-data.js"></script>
<body background="images/construction.jpg">
<div class="container" style="margin-top: 20px;">

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">
                        <span class="fa fa-user"></span> Sign up
                    </h4>
                    <hr>
                    <form method="POST" action="/signup">
                        <div class="row">
                            <div class="col-xs-6 form-group">

                                <label for="username">
                                    <span class="fa fa-envelope-o"></span> Username(e-mail)*
                                </label>
                                <input class="form-control" type="text" name="username"
                                       id="username" required/>
                            </div>
                            <div class="col-xs-6 form-group">

                                <label for="password">
                                    <span class="fa fa-key"></span> Password*
                                </label>
                                <input class="form-control" type="password" name="password"
                                       id="password" required/>
                            </div>
                        </div><hr>
                        <div class="row">
                            <div class="col-xs-4 form-group">

                                <label for="name">
                                    <span class="fa fa-address-card-o"></span> Full name
                                </label>
                                <input class="form-control" type="text" name="name" id="name" required/>
                            </div>
                            <div class="col-xs-4 form-group">

                                <label for="phone">
                                    <span class="fa fa-phone"></span> Phone
                                </label>
                                <input class="form-control" type="text" name="phone" id="phone"/>
                            </div>
                            <div class="col-xs-4 form-group">

                                <label for="born">
                                    <span class="fa fa-calendar"></span> Born date
                                </label>
                                <input class="form-control" type="date" name="born" id="born" />
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-xs-12 form-group card-footer text-xs-right" style="padding-bottom: 0px; margin-bottom: 0px;">
                                <button type="submit" class="btn btn-primary">
                                    <span class="fa fa-send-o"></span> Sign up
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
<% include ../partials/footer %>
</body>
</html>
