<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>
<body>
<div class="container" style="margin-top: 20px;">
    <% if(advice) { %>
    <% include ../partials/advice-login %>
    <% } else { %>
    <div class="card-deck-wrapper">
        <div class="card-deck">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title"><span class="fa fa-user-circle-o"></span> Profile</h4>
                    <div class="card-text">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <span class="fa fa-address-card-o"></span> <%= user.name %>
                            </li>
                            <li class="list-group-item">
                                <span class="fa fa-envelope-o"></span> <%= user.email %>
                            </li>
                            <% if(user.born) { %>
                            <li class="list-group-item">
                                <span class="fa fa-calendar-o"></span> <%= user.born %>
                            </li>
                            <% } %>
                            <li class="list-group-item">
                                <span class="fa fa-star-o"></span> <%= user.resultados.length %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title"><span class="fa fa-database"></span> Your results</h4>
                    <small>Click each result to see full result.</small>
                    <div class="card-text">
                        <ul class="list-group">
                            <% for(var i = 0, len = user.resultados.length; i < len; i++) { %>

                            <a href="#" class="list-group-item btn btn-block btn-outline-primary"
                               onclick="showResult(<%= i %>)">
                                District: <%= user.resultados[i].provincia %>,
                                Date: <%= user.resultados[i].fecha %>
                                <span class="fa fa-chevron-right"></span>
                            </a>

                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>
    <% include ../partials/footer %>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="exampleModalLabel">Result</h4>
                </div>
                <div class="modal-body" id="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        function showResult(index) {
            var results = <%- JSON.stringify(user.resultados) %>;
            $('#modal-body').empty();
            $('#modal-body').append(
                '<b>District: </b>' + results[index].provincia + '<br>' +
                '<b>Minimum votes: </b>' + results[index].result.minNumberOfVotes + '<br>' +
                '<b>Barrier percentage: </b>' + results[index].percentage + '%<br>' +
                '<b>Blank votes: </b>' + results[index].blank + '<br>' +
                '<b>Total votes: </b>' + results[index].result.numberOfVotes + '<br>' +
                '<b>Parties</b><br>' +
                '<pre>' + JSON.stringify(results[index].result.parties, null, 2) + '</pre>'
            );
            $('#myModal').modal('show');
            console.log(results);
        }

    </script>
</body>
</html>
