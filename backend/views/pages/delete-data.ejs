<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>
<body background="images/construction.jpg">
<div class="container" style="margin-top: 20px;">

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-block">
                    <div class="card-text">
                        <form role="form" method="POST" action="/delete-data">
                            <div class="form-group">
                                <label for="results">
                                    <h4 class="card-title"><span class="fa fa-remove"></span> Select one
                                        or more results to
                                        delete</h4>
                                </label>
                                <select class="form-control" name="results" id="results" multiple size="12">
                                    <% for(var i = 0, len = data.length; i < len; i++){ %>
                                    <option value="<%= data[i]._id %>">
                                        date: <%= data[i].eleccion.fecha.slice(4, 6) %>
                                        /<%= data[i].eleccion.fecha.slice(0, 4) %>,
                                        author: <%= data[i].eleccion.autor %>,
                                        district: <%= data[i].provincia %>
                                    </option>
                                    <% } %>
                                </select>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card-footer text-xs-right">
                    <button type="submit" class="btn btn-danger">
                        <span class="fa fa-remove"></span> DELETE SELECTED
                    </button>
                </div>


            </div>
        </div>
        <div class="col-md-4 card">
            <div class="card-block">
                <h4 class="card-title"><span class="fa fa-info-circle"></span> Help</h4>
                <p class="card-text">
                    Pick with ctrl + click or shift + click.
                </p>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>
</body>
</html>
