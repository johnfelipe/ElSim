<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>
<body background="images/construction.jpg">

<div class="container" style="margin-top: 20px;">

    <div class="row">

        <div class="col-md-6">
            <div class="list-group">
                <a class="list-group-item active">
                    <b>Consultar resultados</b>
                </a>
                <a class="list-group-item list-group-item-action">
                    <form class="form" role="form" method="POST" action="/graphic-form">
                        <div class="form-group">

                            <label for="resultSelected">
                                Select a result to create a graph
                            </label>
                            <select class="form-control" name="resultSelected" id="resultSelected">
                                <% for(var i = 0, len = results.length; i < len; i++){ %>
                                <option value="<%= results[i]._id %>">
                                    date: <%= results[i].eleccion.fecha.slice(4, 6) %>
                                    /<%= results[i].eleccion.fecha.slice(0, 4) %>,
                                    author: <%= results[i].eleccion.autor %>,
                                    district: <%= results[i].provincia %>
                                </option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="mode">
                                Select chart mode
                            </label>
                            <select class="form-control" name="mode" id="mode">
                                <option value="bar">Bar chart</option>
                                <option value="pie">Pie chart</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="mandates">
                                Select number of mandates
                            </label>
                            <select class="form-control" name="mandates" id="mandates">
                                <% for(var i = 1; i <= 1000; i++){ %>
                                <option value="<%= i %>"><%= i %></option>
                                <% } %>
                            </select>

                        </div>

                        <button type="submit" class="btn btn-default">
                            Submit
                        </button>
                    </form>
                </a>
            </div>
        </div>
    </div>
</div>


</body>
</html>
