<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>
<body background="images/construction.jpg">

<div class="container">

    <div class="row">

        <div class="col-md-6">
            <div class="list-group">
                <a class="list-group-item active">
                    <b>Consultar resultados</b>
                </a>
                <a class="list-group-item list-group-item-action">
                    <form class="form" role="form" method="POST" action="/graphic-form">
                        <div class="form-group">

                            <label for="results">
                                Select a result to create a graph
                            </label>
                            <select name="resultSelected">
                                <% for(var i = 0, len = results.length; i < len; i++){ %>
                                <option value="<%= results[i]._id %>">
                                    date: <%= results[i].eleccion.fecha.slice(4,6) %>/<%= results[i].eleccion.fecha.slice(0,4) %>,
                                    author: <%= results[i].eleccion.autor %>,
                                    district: <%= results[i].provincia %>
                                </option>
                                <% } %>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-default">
                            Submit
                        </button>
                    </form>
                </a>
            </div>
        </div>
    </div>
</div>


</body>
</html>
