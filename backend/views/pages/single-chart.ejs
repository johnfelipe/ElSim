<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>

<body>
<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">
                        <b><span class="fa fa-list"></span> Data</b>
                        <hr>
                    </h4>
                    <div class="card-text">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <span class="fa fa-user-o"></span> Author
                                <span class="tag tag-primary tag-pill float-xs-right">
                                    <%= autor %>
                                </span>
                            </li>
                            <li class="list-group-item">
                                <span class="fa fa-calendar"></span>
                                Date
                                <span class="tag tag-primary tag-pill float-xs-right">
                                    <%= fecha.slice(4, 6) %>/<%= fecha.slice(0, 4) %>
                                </span>
                            </li>
                            <li class="list-group-item">
                                <span class="fa fa-map-marker"></span>
                                District
                                <span class="tag tag-primary tag-pill float-xs-right">
                                    <%= provincia %>
                                </span>
                            </li>
                            <li class="list-group-item">
                                <span class="fa fa-envelope-o"></span> Number of
                                votes
                                <span class="tag tag-primary tag-pill float-xs-right">
                                    <%= result.numberOfVotes %>
                                </span>
                            </li>

                            <% Object.keys(result.parties).forEach(function(key){ if(parseInt(result.parties[key]) > 0) { %>
                            <li class="list-group-item">
                                <img src="<%= icons[key] %>" width="18" height="18"/>
                                <%= key %>
                                <span class="tag tag-primary tag-pill float-xs-right">
                                            <%= result.parties[key] %> mandates
                                        </span>
                            </li>
                            <% }}); %>

                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card myCard">
                <div class="card-block">
                    <h4 class="card-title"><span class="fa fa-bar-chart-o"></span> Chart</h4>
                    <hr>
                    <div id="container"></div>
                </div>
                <hr>
                <div class="card-footer text-xs-right">
                    <span class="fa fa-database"></span> This result is now stored in your own results!<br>
                    <small><a href="/users/profile">See my own results</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="http://code.highcharts.com/highcharts-3d.js"></script>
<script type="text/javascript">
    jQuery.noConflict();
    var options = <%- JSON.stringify(options) %>;
    (function ($) {
        $(function () {
            $('#container').highcharts(options);
        });
    })(jQuery);

</script>
</body>
</html>
