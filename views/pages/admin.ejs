<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>
<body>
<div class="container">
    <div class="card-deck-wrapper">
        <div class="card-deck">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">
                        <span class="fa fa-users"></span> Users
                    </h4>
                    <ul class="list-group">
                    <% for(var i = 0, len = users.length; i < len; i++) { %>
                        <li class="list-group-item">
                            <span class="fa fa-user-circle-o"></span> <%= users[i].name %>, <%= users[i].email %>
                        </li>
                    <% } %>
                    </ul>
                </div>
            </div>
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">
                        <span class="fa fa-file-text"></span> Logs
                    </h4>
                    <% if(logs.length) { %>
                    <ul class="list-group">
                        <% for(i = 0, len = logs.length; i < len; i++) { %>
                        <li class="list-group-item"><%= logs[i] %></li>
                        <% } %>
                    </ul>
                    <% } else { %>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <span class="fa fa-smile-o"></span> Nice, there are no logs!
                        </li>
                    </ul>
                    <% } %>
                </div>
            </div>
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">
                        <span class="fa fa-check-circle-o"></span> Results
                    </h4>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <span class="tag tag-default tag-pill float-xs-right"><%= results.length %></span><span class="fa fa-file-text-o"></span> Results stored
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-deck">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">
                        <span class="fa fa-newspaper-o"></span> Send news
                    </h4>
                    <div class="card-text">
                        <form method="POST" name="formNews" id="formNews" action="/users/sendNews">
                            <div class="form-group">
                                <input type="text" class="form-control" id="notice" name="notice"
                                       placeholder="What do you want to tell subscribed users?" required>
                            </div>
                            <div class="form-group pull-right">
                                <button type="submit" class="btn btn-primary" form="formNews">
                                    <span class="fa fa-rss-square"></span> Send news
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>
</body>
</html>
