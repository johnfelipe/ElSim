<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>
<script src="/js/highmaps.js"></script>
<script src="/js/exporting.js"></script>
<script src="/js/es-all.js"></script>
<body>
<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-block">
                    <table id="tabla" class="display" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>Party</th>
                            <th>Mandates</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for(let party in global.agrupado) { %>
                        <tr>
                            <td><img src="<%= icons[party] %>" width="18" height="18"/> <%= party %></td>
                            <td><%= global.agrupado[party] %></td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card myCard">
                <div id="container" class="card-img-top"></div>
                <div class="card-footer text-xs-right">
                    <span class="fa fa-database"></span> This result is now stored in your own results!<br>
                    <small><a href="/users/profile">See my own results</a></small>
                </div>
            </div>

            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">RAW</h4>
                    <pre><code class="json"><%= JSON.stringify(global, undefined, 4) %></code></pre>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var global = <%- JSON.stringify(global) %>;
    var colors = <%- JSON.stringify(colors) %>;

    $('#tabla').DataTable({
        "order": [[ 1, "desc" ]],
        "paging":   false,
        "search": false
    } );

</script>

<script type="text/javascript" src="/js/country-chart.min.js"></script>
<% include ../partials/footer.ejs %>
</body>
</html>
