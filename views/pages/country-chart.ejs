<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>
<script src="/js/highmaps.js"></script>
<script src="/js/exporting.js"></script>
<script src="/js/es-all.js"></script>
<body>
<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">
                        <b><span class="fa fa-list"></span> Data</b>
                        <hr>
                    </h4>
                    <div class="card-text">
                        <% for(let district of global) { %>
                        <ul class="list-group"><b><span class="fa fa-map-marker"></span> <%= district.cc %></b><br>
                            <% for(let party in district.parties) { %>
                            <li class="list-group-item">
                                <img src="<%= icons[party] %>" width="18" height="18"/> <%= party %> <span
                                        class="tag tag-primary tag-pill "> <%= district.parties[party] %></span><br>
                            </li>
                            <% } %>
                        </ul>
                        <hr>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card myCard">
                <div class="card-block">
                    <h4 class="card-title"><span class="fa fa-bar-chart-o"></span> Chart</h4>
                    <hr>
                    <div id="container"></div>
                </div>
                <hr>
                <div class="card-footer text-xs-right">
                    <span class="fa fa-database"></span> This result is now stored in your own results!<br>
                    <small><a href="/users/profile">See my own results</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var global = <%- JSON.stringify(global) %>;
    var colors = <%- JSON.stringify(colors) %>;
</script>
<script type="text/javascript" src="/js/country-chart.js"></script>
<% include ../partials/footer.ejs %>
</body>
</html>
