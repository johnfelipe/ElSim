<!DOCTYPE html>
<html>
<% include ../../partials/head.ejs %>
<% include ../../partials/menu.ejs %>
<script src="/js/highmaps.js"></script>
<script src="/js/exporting.js"></script>
<script src="/js/es-all.js"></script>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-block">
                    <table id="tabla" class="display card-text" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>Party</th>
                            <th>Mandates</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for(let party in global.agrupado) { %>
                        <tr>
                            <td><img src="<%= Object.prototype.hasOwnProperty.call(icons,party) ? icons[party] : 'images/ico/no-ico.png'%>" width="18" height="18"/> <%= party %></td>
                            <td><%= global.agrupado[party] %></td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <% if(!wholeCountry) { %>
            <div class="card myCard">
                <div id="container" class="card-img-top"></div>
                <div class="card-footer text-xs-right">
                    <span class="fa fa-database"></span> This result is now stored in your own results!<br>
                    <small><a href="/users/profile">See my own results</a></small>
                </div>
            </div>
            <% } else {%>
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">No map for whole country mode</h4>
                    <p class="card-text">
                        <img src="/images/spain.gif" width="100%" height="auto"/>
                    </p>
                </div>
            </div>
            <% } %>
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">RAW</h4>
                    <pre><code class="json"><%= JSON.stringify(global, undefined, 4) %></code></pre>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var global = <%- JSON.stringify(global) %>;
    var colors = <%- JSON.stringify(colors) %>;

    $('#tabla').DataTable({
        "order": [[ 1, "desc" ]],
        "paging":   false,
        "search": false
    } );

</script>

<script type="text/javascript" src="/js/country-chart.js"></script>
<% include ../../partials/footer.ejs %>
</body>
</html>
