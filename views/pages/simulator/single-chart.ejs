<!DOCTYPE html>
<html>
<% include ../../partials/head.ejs %>
<% include ../../partials/menu.ejs %>
<script src="/js/highcharts.js"></script>
<script src="/js/exporting.js"></script>
<script src="/js/highcharts-3d.js"></script>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-4">

            <div class="card">
                <div class="card-block">
                    <table id="tabla" class="display" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>Party</th>
                            <th>Mandates</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for(let key in result.parties) { if(parseInt(result.parties[key]) > 0) { %>
                        <tr>
                            <td><img src="<%= icons[key] %>" width="18" height="18"/> <%= key %></td>
                            <td><%= result.parties[key] %></td>
                        </tr>
                        <% } %>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card">
                <div class="card-block">
                    <table id="tabla2" class="display" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>Field</th>
                            <th>Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>Number of votes</td>
                            <td><%= result.numberOfVotes %></td>
                        </tr>
                        <tr>
                            <td>Author</td>
                            <td><%= autor %></td>
                        </tr>
                        <tr>
                            <td>Date</td>
                            <td><%= moment(fecha).format('DD/MM/YYYY') %></td>
                        </tr>
                        <tr>
                            <td>District</td>
                            <td><%= provincia %></td>
                        </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card myCard">
                <div class="card-img-top" id="container">
                </div>
                <div class="card-footer text-xs-right">
                    <span class="fa fa-database"></span> This result is now stored in your own results!<br>
                    <small><a href="/users/profile">See my own results</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#tabla').DataTable({
        "order": [[1, "desc"]],
        "paging": false,
        "search": false
    });
    $('#tabla2').DataTable({
        "paging": false,
        "search": false
    });

</script>
<script type="text/javascript">
    jQuery.noConflict();
    let options = <%- JSON.stringify(options) %>;
    (function ($) {
        $(function () {
            $('#container').highcharts(options);
        });
    })(jQuery);

</script>
<% include ../../partials/footer.ejs %>
</body>
</html>
