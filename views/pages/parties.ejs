<!DOCTYPE html>
<html>
<% include ../partials/head %>
<% include ../partials/menu %>

<body>
<div class="container" style="margin-top: 20px;">
    <div class="card-deck-wrapper">
        <div class="card-deck">
            <% for(var i = 0, len = parties.length; i < len && i < 4; i++) { %>
            <div class="card myCard">
                <div class="card-block ">
                    <h4 class="card-title"><%= parties[i].name %></h4>
                    <img src="<%= parties[i].img %>" width="100%" class="card-img-top"/>
                </div>
                <div class="card-footer text-xs-right">
                    <a class="btn btn-outline-primary" href="<%= parties[i].description %>">
                        <span class="fa fa-info-circle"></span> More info <span class="fa fa-chevron-right"></span>
                    </a>
                </div>
            </div>
            <% } %>
        </div>
        <div class="card-deck">
            <% for( i = 4, len = parties.length; i < len && i < 8; i++) { %>
            <div class="card myCard">
                <div class="card-block ">
                    <h4 class="card-title"><%= parties[i].name %></h4>
                    <img src="<%= parties[i].img %>" width="100%" class="card-img-top"/>
                </div>
                <div class="card-footer text-xs-right">
                    <a class="btn btn-outline-primary" href="<%= parties[i].description %>">
                        <span class="fa fa-info-circle"></span> More info <span class="fa fa-chevron-right"></span>
                    </a>
                </div>
            </div>
            <% } %>
        </div>
        <div class="card-deck">
            <% for( i = 8, len = parties.length; i < len && i < 12; i++) { %>
            <div class="card myCard">
                <div class="card-block ">
                    <h4 class="card-title"><%= parties[i].name %></h4>
                    <img src="<%= parties[i].img %>" width="100%" height="120" class="card-img-top"/>
                </div>

                <div class="card-footer text-xs-right">
                    <a class="btn btn-outline-primary" href="<%= parties[i].description %>">
                        <span class="fa fa-info-circle"></span> More info <span class="fa fa-chevron-right"></span>
                    </a>
                </div>
            </div>
            <% } %>
        </div>
        <div class="card-deck">
            <% for( i = 12, len = parties.length; i < len && i < 16; i++) { %>
            <div class="card myCard">
                <div class="card-block ">
                    <h4 class="card-title"><%= parties[i].name %></h4>
                    <img src="<%= parties[i].img %>" width="100%" class="card-img-top"/>

                </div>

                <div class="card-footer text-xs-right">
                    <a class="btn btn-outline-primary" href="<%= parties[i].description %>">
                        <span class="fa fa-info-circle"></span> More info <span class="fa fa-chevron-right"></span>
                    </a>
                </div>
            </div>
            <% } %>
        </div>
        <div class="card-deck">
            <% for( i = 16, len = parties.length; i < len && i < 20; i++) { %>
            <div class="card myCard">
                <div class="card-block ">
                    <h4 class="card-title"><%= parties[i].name %></h4>
                    <img src="<%= parties[i].img %>" width="100%" class="card-img-top"/>
                </div>

                <div class="card-footer text-xs-right">
                    <a class="btn btn-outline-primary" href="<%= parties[i].description %>">
                        <span class="fa fa-info-circle"></span> More info <span class="fa fa-chevron-right"></span>
                    </a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
<% include ../partials/footer %>
</body>
</html>
